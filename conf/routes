# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.MainController.index

# Rules
GET     /about                      controllers.MainController.showRules

# Menu routes
POST    /settings/player/name       controllers.SettingsController.setPlayerName
POST    /settings/player/           controllers.SettingsController.setNumberOfPlayer
GET     /settings                   controllers.SettingsController.openMenu
GET     /game                       controllers.GameController.startGame

# Game routes
POST    /map/move                   controllers.GameController.moveMap(direction)
POST    /player/                    controllers.GameController.movePlayer
GET     /undo                       controllers.GameController.undoMove
GET     /redo                       controllers.GameController.redoMove
GET     /reveal                     controllers.GameController.revealMrXPosition
GET     /coords                     controllers.GameController.getCoords
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
