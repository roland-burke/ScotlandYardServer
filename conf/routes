# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.MainController.index

# Menu routes
GET     /menu/player/:number        controllers.MainController.setNumberOfPlayer(number)
GET     /menu/choose/start          controllers.MainController.startReveal
GET     /menu/choose/:player        controllers.MainController.chooseName(player)
GET     /menu/name/:name            controllers.MainController.enterName(name)
GET     /menu/reveal                controllers.MainController.revealMrXPosition
GET     /game                       controllers.MainController.startGame

# Game routes
GET     /map/:direction             controllers.MapController.moveMap(direction)
GET     /player/:station            controllers.MainController.movePlayer(station)
